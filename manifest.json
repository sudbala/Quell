        "default_icon": {
            "16": "images/quell16.png",
            "32": "images/quell32.png",
            "48": "images/quell48.png",
            "128": "images/quell128.png"
        }
      },
      "icons": {
          "16": "images/quell16.png",
          "32": "images/quell32.png",
          "48": "images/quell48.png",
          "128": "images/quell128.png"
      },
    "version":                  "1.0"
}