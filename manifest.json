{
    "manifest_version":         2,
    "content_scripts":          [ {
        "js":       ["jquery.min.js", "iframeInjector.js" ],
        "matches":  ["*://*.facebook.com/*", "*://*.twitter.com/*"
        ]
    } ],
    "description":              "Quell that social media addiction! ",
    "name":                     "Quell",
